{% block swag_migration_empty_screen %}
    <sw-page class="swag-migration-empty-screen">
        {% block swag_migration_index_smart_bar_header %}
            <template slot="smart-bar-header">
                <h2>
                    {{ $tc('sw-settings.index.title') }}
                    <sw-icon name="small-arrow-medium-right" small></sw-icon>
                    {{ $tc('swag-migration.general.mainMenuItemGeneral') }}
                </h2>
            </template>
        {% endblock %}

        {% block swag_migration_index_smart_bar_actions %}
            <template slot="smart-bar-actions">
                <sw-button variant="primary" disabled>
                    {{ $tc('swag-migration.index.migrateButton') }}
                </sw-button>
            </template>
        {% endblock %}

        {% block swag_migration_index_content %}
            <sw-empty-state :title="$tc('swag-migration.emptyScreen.title')" slot="content">
                <p class="swag-migration-empty-screen__description" v-html="$tc('swag-migration.emptyScreen.description')"></p>
                <sw-button variant="primary"
                           @click="onConnectClick">
                    {{ $tc('swag-migration.emptyScreen.connectButton') }}
                </sw-button>
            </sw-empty-state>
        {% endblock %}
    </sw-page>
{% endblock %}