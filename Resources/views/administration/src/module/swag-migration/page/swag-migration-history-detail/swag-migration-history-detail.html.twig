{% block swag_migration_history_detail %}
    <div class="swag-migration-history-detail">
        <sw-modal class="swag-migration-history-detail-modal"
                  size="800px"
                  v-if="showModal"
                  :title="$tc('swag-migration.history.contextMenu.details')"
                  :isLoading="isLoading"
                  @closeModal="onCloseModal">
            <div v-if="!isLoading">
                {% block swag_migration_history_detail_errors %}
                    {% block swag_migration_history_detail_errors_title %}
                        <p class="error-list-header">{{ $tc('swag-migration.index.loadingScreenCard.result.warning.warningListTitle', errorList.length, { count: errorList.length }) }}</p>
                    {% endblock %}
                    {% block swag_migration_history_detail_errors_list %}
                        <div v-if="errorList.length > 0">
                            <ul class="error-list-content">
                                <li v-for="error in errorList">
                                    {{ (error.snippetName !== $t(error.snippetName, error.details)) ? $t(error.snippetName, error.details) : $t('swag-migration.index.error.unknownError') }}
                                </li>
                            </ul>
                        </div>
                    {% endblock %}
                {% endblock %}
            </div>
        </sw-modal>
    </div>
{% endblock %}