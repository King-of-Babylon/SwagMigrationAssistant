{% block swag_migration_wizard %}
    <div class="swag-migration-wizard">
        <sw-modal class="swag-migration-wizard"
                  size="800px"
                  v-if="showModal"
                  :title="$tc('swag-migration.wizard.title')"
                  :isLoading="isLoading"
                  @closeModal="onCloseModal">

            {% block swag_migration_router_view %}
                <router-view
                        :apiKey="credentials.apiKey"
                        @apiKeyChanged="onApiKeyChanged"
                        :apiUser="credentials.apiUser"
                        @apiUserChanged="onApiUserChanged"
                        :endpoint="credentials.endpoint"
                        @endpointChanged="onEndpointChanged"
                        :errorMessage="errorMessage">
                </router-view>
            {% endblock %}

            <template slot="modal-footer">
                {% block swag_migration_wizard_footer %}
                    <div></div>

                    {% block swag_migration_wizard_navigation %}
                        <swag-dot-navigation :navCount="routeCountVisible"
                                             :navIndex="routeIndexVisible"
                                             v-if="!editMode">
                        </swag-dot-navigation>
                        <div v-else></div>
                    {% endblock %}

                    {% block swag_migration_wizard_actions %}
                        <div class="swag-migration-wizard__actions">
                            {% block swag_migration_wizard_actions_previous %}
                                <sw-button v-show="buttonPreviousVisible" size="small" @click="onPrevious"
                                           :disabled="backButtonDisabled">
                                    {{ buttonPreviousText }}
                                </sw-button>
                            {% endblock %}
                            {% block swag_migration_wizard_actions_next %}
                                <sw-button v-show="buttonNextVisible" size="small" variant="primary" @click="onNext"
                                           :disabled="nextButtonDisabled">
                                    {{ buttonNextText }}
                                </sw-button>
                            {% endblock %}
                        </div>
                    {% endblock %}
                {% endblock %}
            </template>

        </sw-modal>
    </div>
{% endblock %}