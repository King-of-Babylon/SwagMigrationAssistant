<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Shopware 5.5 Profile -->
        <service id="SwagMigrationNext\Profile\Shopware55\Shopware55Profile"
                 class="SwagMigrationNext\Profile\Shopware55\Shopware55Profile">
            <argument type="service" id="swag_migration_data.repository"/>
            <argument type="service" id="SwagMigrationNext\Migration\Converter\ConverterRegistry"/>
            <argument type="service" id="SwagMigrationNext\Migration\Asset\MediaFileService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.profile"/>
        </service>

        <!-- Shopware 5.5 Profile Converter -->
        <service id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService">
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\ProductConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\ProductConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Asset\MediaFileService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\TranslationConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\TranslationConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\CategoryConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\CategoryConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\AssetConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\AssetConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Asset\MediaFileService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\CustomerConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\CustomerConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Converter\OrderConverter"
                 class="SwagMigrationNext\Profile\Shopware55\Converter\OrderConverter">
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"/>
            <argument type="service" id="SwagMigrationNext\Profile\Shopware55\Converter\ConverterHelperService"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Tax\TaxCalculator"/>
            <argument type="service" id="SwagMigrationNext\Migration\Logging\LoggingService"/>
            <tag name="shopware.migration.converter"/>
        </service>

        <!-- Shopware 5.5 Gateway -->
        <service id="SwagMigrationNext\Profile\Shopware55\Gateway\Api\Shopware55ApiFactory"
                 class="SwagMigrationNext\Profile\Shopware55\Gateway\Api\Shopware55ApiFactory">
            <tag name="shopware.migration.gateway_factory"/>
        </service>

        <service id="SwagMigrationNext\Profile\Shopware55\Gateway\Local\Shopware55LocalFactory"
                 class="SwagMigrationNext\Profile\Shopware55\Gateway\Local\Shopware55LocalFactory">
            <tag name="shopware.migration.gateway_factory"/>
        </service>

        <!-- Shopware 5.5 Mapping -->
        <service id="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService"
                 class="SwagMigrationNext\Profile\Shopware55\Mapping\Shopware55MappingService">
            <argument type="service" id="swag_migration_mapping.repository"/>
            <argument type="service" id="locale.repository"/>
            <argument type="service" id="language.repository"/>
            <argument type="service" id="country.repository"/>
            <argument type="service" id="payment_method.repository"/>
            <argument type="service" id="order_state.repository"/>
            <argument type="service" id="order_transaction_state.repository"/>
            <argument type="service" id="currency.repository"/>
        </service>
    </services>
</container>
